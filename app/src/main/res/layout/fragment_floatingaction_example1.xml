<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="10dp">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton_example_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:elevation="20dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_floatingactionbutton_example_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Color"/>

                <android.support.v7.widget.AppCompatSeekBar
                    android:id="@+id/seekbar_floatingactionbutton_example_color_red"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:maxHeight="2dp"
                    android:minHeight="2dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="5dp"
                    android:progressDrawable="@drawable/seekbar_red_progress"
                    android:thumb="@drawable/bg_red_circle"/>

                <android.support.v7.widget.AppCompatSeekBar
                    android:id="@+id/seekbar_floatingactionbutton_example_color_green"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:maxHeight="2dp"
                    android:minHeight="2dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="5dp"
                    android:progressDrawable="@drawable/seekbar_green_progress"
                    android:thumb="@drawable/bg_green_circle"/>

                <android.support.v7.widget.AppCompatSeekBar
                    android:id="@+id/seekbar_floatingactionbutton_example_color_blue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:maxHeight="2dp"
                    android:minHeight="2dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="5dp"
                    android:progressDrawable="@drawable/seekbar_blue_progress"
                    android:thumb="@drawable/bg_blue_circle"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>