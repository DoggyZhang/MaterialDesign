<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="16dp">

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/Grey"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:counterEnabled="true"
        app:counterMaxLength="10"
        app:counterOverflowTextAppearance="@style/redTitleText"
        app:counterTextAppearance="@style/blackContentText"
        app:errorEnabled="true"
        app:errorTextAppearance="@style/redTitleText"
        app:hintAnimationEnabled="true"
        app:hintEnabled="true"
        app:hintTextAppearance="@style/blackContentText"
        app:passwordToggleContentDescription="PasswordToggleContentDescription"
        app:passwordToggleDrawable="@mipmap/ic_eye"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/Red"
        app:passwordToggleTintMode="multiply"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:bufferType="spannable"
            android:hint="This is hint text."
            android:shadowColor="@color/Blue"
            android:textColor="#3c3c3c"
            android:textColorHighlight="@color/Blue"
            android:textColorHint="#3c3c3c"
            android:textCursorDrawable="@null"
            android:textSelectHandle="@mipmap/ic_eye"
            android:textSelectHandleLeft="@mipmap/ic_eye"
            android:textSelectHandleRight="@mipmap/ic_eye"
            />

    </android.support.design.widget.TextInputLayout>

</LinearLayout>