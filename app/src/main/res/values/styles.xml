<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="redTitleText" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">#df6161</item>
    </style>

    <style name="redContentText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#df6161</item>
    </style>

    <style name="blueTitleText" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/Blue</item>
    </style>

    <style name="blueContentText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/Blue</item>
    </style>

    <style name="whiteTitleText" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">#fff</item>
    </style>

    <style name="whiteContentText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#fff</item>
    </style>

    <style name="blackTitleText" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">#3c3c3c</item>
    </style>

    <style name="blackContentText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#3c3c3c</item>
    </style>

    <style name="RedSeekBar" parent="Base.Widget.AppCompat.SeekBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@color/Red</item>
        <item name="android:thumb">@drawable/bg_red_circle</item>
        <item name="android:focusable">false</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
    </style>

    <style name="GreenSeekBar" parent="Base.Widget.AppCompat.SeekBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@color/Green</item>
        <item name="android:thumb">@drawable/bg_green_circle</item>
        <item name="android:focusable">false</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
    </style>

    <style name="BlueSeekBar" parent="Base.Widget.AppCompat.SeekBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@color/Blue</item>
        <item name="android:thumb">@drawable/bg_blue_circle</item>
        <item name="android:focusable">false</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
    </style>
</resources>
